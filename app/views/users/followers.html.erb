<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1>
      <%= @user.username %>
    </h1>

    <%= render "users/top_nav"%>
  </div>
</div>


<%= current_user.followers.count%>
  <div class="list-group">
    <% current_user.followers.each do |follower|%>
      <%= link_to "#{follower.username}", user_path(follower.username), class: "list-group-item list-group-item-action" %>
    <% end %>
  </div>
